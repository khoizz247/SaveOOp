<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600" prefWidth="800.0" style="-fx-background-color: #00000099;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Scene.ControlGameScene">
    <children>
        <Label layoutX="260.0" layoutY="155.0" text="GAME PAUSE" textFill="#f7f7f7">
            <font>
                <Font name="Papyrus" size="32.0" />
            </font>
        </Label>
      <VBox layoutX="300.0" layoutY="240.0" prefHeight="165.0" prefWidth="200.0">
         <children>
              <Button fx:id="ResumeButton" mnemonicParsing="false" prefHeight="200.0" prefWidth="260.0" style="-fx-background-color: transparent;" text="RESUME" textFill="WHITE">
                  <font>
                      <Font name="Papyrus" size="16.0" />
                  </font>
              </Button>
              <Button fx:id="RestartButton" mnemonicParsing="false" prefHeight="200.0" prefWidth="260.0" style="-fx-background-color: transparent;" text="RESTART" textFill="WHITE">
                  <font>
                      <Font name="Papyrus" size="16.0" />
                  </font>
              </Button>
              <Button fx:id="QuitButton" mnemonicParsing="false" prefHeight="200.0" prefWidth="260.0" style="-fx-background-color: transparent;" text="QUIT GAME" textFill="WHITE">
                  <font>
                      <Font name="Papyrus" size="16.0" />
                  </font>
              </Button>
         </children>
      </VBox>
    </children>
</AnchorPane>
