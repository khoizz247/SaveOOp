<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.AmbientLight?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="clickmebutton" prefHeight="600" prefWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Scene.ControlHomeScene">
    <children>
        <AmbientLight color="CHARTREUSE" layoutX="195.0" layoutY="80.0" lightOn="true" />
        <ImageView fitHeight="600.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../Image/background/background.png" />
            </image>
        </ImageView>
        <ImageView fitHeight="250.0" fitWidth="500.0" layoutX="143.0" layoutY="49.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../Image/LogoGame/LogoGame.png" />
            </image>
        </ImageView>
        <ImageView fitHeight="200.0" fitWidth="300.0" layoutX="243.0" layoutY="115.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../Image/LogoGame/Finn.png" />
            </image>
            <effect>
                <DropShadow />
            </effect>
        </ImageView>
      <VBox layoutX="158.0" layoutY="233.0" prefHeight="300.0" prefWidth="500.0">
         <children>
            <Button fx:id="StartButton" mnemonicParsing="false" prefHeight="300.0" prefWidth="500.0" style="-fx-background-color: transparnet;" text="Start Game" textFill="WHITE">
               <font>
                  <Font name="Papyrus" size="30.0" />
               </font>
            </Button>
            <Button fx:id="SettingButton" mnemonicParsing="false" prefHeight="300.0" prefWidth="500.0" style="-fx-background-color: transparnt;" text="Setting" textFill="WHITE">
               <font>
                  <Font name="Papyrus" size="30.0" />
               </font>
            </Button>
            <Button fx:id="QuitButton" mnemonicParsing="false" prefHeight="300.0" prefWidth="500.0" style="-fx-background-color: transparent;" text="Quit Game" textFill="WHITE">
               <font>
                  <Font name="Papyrus" size="30.0" />
               </font>
            </Button>
         </children>
      </VBox>

    </children>
    <cursor>
        <Cursor fx:constant="DEFAULT" />
    </cursor>
</AnchorPane>
